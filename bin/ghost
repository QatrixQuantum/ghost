printf '\033]2;Ghost Framework\a'

if [[ -d ~/ghost ]]
then
{
cd ~/ghost
mkdir etc/.disabled
mv ghost etc/.disabled
mv etc/ghost ~/ghost
cp etc/.disabled/ghost etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x ghost
./ghost
{
if [[ -f ~/ghost/.updated ]]
then
rm ~/ghost/.updated
else
cd ~/ghost
mkdir etc/.disabled
mv ghost etc/.disabled
mv etc/ghost ~/ghost
cp etc/.disabled/ghost etc
rm -rf etc/.disabled
fi
} &> /dev/null
else
{
ASESR="$( curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/ghost.git
cd $OLDPWD
cd ~/ghost
mkdir etc/.disabled
mv ghost etc/.disabled
mv etc/ghost ~/ghost
cp etc/.disabled/ghost etc
rm -rf etc/.disabled
} &> /dev/null
chmod +x ghost
./ghost
{
if [[ -f ~/ghost/.updated ]]
then
rm ~/ghost/.updated
else
cd ~/ghost
mkdir etc/.disabled
mv entropy etc/.disabled
mv etc/ghost ~/ghost
cp etc/.disabled/ghost etc
rm -rf etc/.disabled
fi
} &> /dev/null
else
cd ~
sleep 1
exit
fi
fi
